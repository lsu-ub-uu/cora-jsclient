<project xmlns="http://maven.apache.org/POM/4.0.0"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>se.uu.ub.cora</groupId>
		<artifactId>cora-parent</artifactId>
		<version>0.3-SNAPSHOT</version>
	</parent>

	<artifactId>jsclient</artifactId>
	<version>0.1-SNAPSHOT</version>
	<packaging>jar</packaging>
	<name>JS Client</name>

	<scm>
		<connection>scm:git:https://git.epc.ub.uu.se/epc/jsclient.git</connection>
		<developerConnection>scm:git:https://git.epc.ub.uu.se/epc/jsclient.git</developerConnection>
		<url>https://git.epc.ub.uu.se/epc/jsclient.git</url>
	</scm>

	<repositories>
		<repository>
			<id>epc-release</id>
			<name>EPC Nexus Release Repository</name>
			<url>http://epc.ub.uu.se/nexus/content/groups/public</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>epc-snapshot</id>
			<name>EPC Nexus Snapshot Repository</name>
			<url>http://epc.ub.uu.se/nexus/content/groups/public-snapshots</url>
			<releases>
				<enabled>false</enabled>
			</releases>
			<snapshots>
				<updatePolicy>daily</updatePolicy>
				<enabled>true</enabled>
			</snapshots>
		</repository>
	</repositories>

	<properties>
		<sonar.language>js</sonar.language>
		<sonar.sources>src/main/script</sonar.sources>
		<sonar.tests>src/test/script</sonar.tests>
	</properties>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>com.kelveden</groupId>
					<artifactId>maven-karma-plugin</artifactId>
					<version>1.8</version>
					<executions>
						<execution>
							<goals>
								<goal>start</goal>
							</goals>
						</execution>
					</executions>
				</plugin>
				<plugin>
					<groupId>pl.allegro</groupId>
					<artifactId>grunt-maven-plugin</artifactId>
					<version>1.5.1</version>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

	<profiles>
		<profile>
			<id>test</id>
			<build>
				<plugins>
					<plugin>
						<groupId>com.kelveden</groupId>
						<artifactId>maven-karma-plugin</artifactId>
						<configuration>
							<configFile>karma.conf.js</configFile>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>teamcity</id>
			<build>
				<plugins>
					<plugin>
						<groupId>com.kelveden</groupId>
						<artifactId>maven-karma-plugin</artifactId>
						<configuration>
							<configFile>karma.conf.js</configFile>
							<browsers>PhantomJS</browsers>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>grunt</id>
			<build>
				<plugins>
					<plugin>
						<groupId>pl.allegro</groupId>
						<artifactId>grunt-maven-plugin</artifactId>
						<version>1.5.1</version>
						<executions>
							<execution>
								<goals>
									<goal>npm</goal>
									<goal>grunt</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

</project>
